{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./dist/js/",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types",
      "src/types.d.ts"
    ]
  }
}