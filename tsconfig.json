{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./dist/js/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "moduleResolution": "bundler",
    "types": ["vite/client", "chrome"],
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./src/__tests__/*"]
    }
  }
}