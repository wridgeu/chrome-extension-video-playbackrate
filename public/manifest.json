{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Video Speed Regulator",
  "description": "Adjust your video playback rate",
  "version": "1.6.5",
  "background": {
    "service_worker": "./js/sw.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "./img/icon_16.png",
      "32": "./img/icon_32.png",
      "48": "./img/icon_64.png",
      "128": "./img/icon_128.png"
    },
    "default_title": "Adjust Playback Speed",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./img/icon_16.png",
    "32": "./img/icon_32.png",
    "48": "./img/icon_64.png",
    "128": "./img/icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/contentscript.js", "js/types.js", "js/playback-*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
