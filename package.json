{
  "name": "cbe-vpr",
  "version": "1.2.0",
  "description": "Some experiment with browser extensions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/wridgeu/chrome-extension-video-playbackrate.git",
    "directory": "src"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.js ",
    "watch": "npm-watch _watch_build",
    "cleanup": "rimraf dist *.dist.zip",
    "_watch_build": "npm run cleanup && npm run build",
    "prettier": "prettier --write .",
    "eslint": "eslint",
    "prepare": "husky install",
    "zip": "npm-build-zip --name=dist --source=./dist"
  },
  "watch": {
    "_watch_build": {
      "patterns": [
        "src/*",
        "public/*"
      ],
      "extensions": "ts,json,html,css",
      "quiet": false,
      "verbose": true
    }
  },
  "keywords": [
    "Chrome Extension",
    "Video Speed Adjustments",
    "Browser Extension"
  ],
  "author": "Marco Beier",
  "license": "Derived Beerware License",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chrome": "^0.0.179",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "npm-build-zip": "^1.0.3",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.69.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@ui5/webcomponents": "^1.1.2"
  }
}
