{
  "name": "cbe-vpr",
  "version": "1.6.1",
  "engines": {
    "node": ">=24.0.0"
  },
  "description": "Some experiment with browser extensions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/wridgeu/chrome-extension-video-playbackrate.git",
    "directory": "src"
  },
  "type": "module",
  "scripts": {
    "build": "npm run cleanup && vite build",
    "build:watch": "npm run cleanup && vite build --watch",
    "cleanup": "rimraf --glob dist *.dist.zip",
    "lint": "eslint && prettier --check src",
    "lint:fix": "eslint --fix && prettier --write src",
    "prepare": "husky",
    "zip": "npm-build-zip --name=dist --source=./dist",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:watch": "vitest --project unit",
    "test:coverage": "vitest run --coverage --project unit",
    "test:e2e": "vitest run --project e2e",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "Chrome Extension",
    "Video Speed Adjustments",
    "Browser Extension",
    "Extension"
  ],
  "author": "Marco Beier",
  "license": "Beerware",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.32",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "npm-build-zip": "^1.0.4",
    "prettier": "^3.7.4",
    "puppeteer": "^24.34.0",
    "rimraf": "^6.1.2",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@ui5/webcomponents": "^2.18.0"
  }
}
