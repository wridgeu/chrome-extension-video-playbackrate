{
  "name": "cbe-vpr",
  "version": "1.4.0",
  "description": "Some experiment with browser extensions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/wridgeu/chrome-extension-video-playbackrate.git",
    "directory": "src"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "watch": "npm-watch _watch_build",
    "cleanup": "rimraf dist *.dist.zip",
    "_watch_build": "npm run cleanup && npm run build",
    "lint": "eslint && prettier --check src",
    "lint:fix": "eslint  --fix && prettier --write src",
    "prepare": "husky install",
    "zip": "npm-build-zip --name=dist --source=./dist"
  },
  "watch": {
    "_watch_build": {
      "patterns": [
        "src/*",
        "public/*"
      ],
      "extensions": "ts,json,html,css",
      "quiet": false,
      "verbose": true
    }
  },
  "keywords": [
    "Chrome Extension",
    "Video Speed Adjustments",
    "Browser Extension",
    "Extension"
  ],
  "author": "Marco Beier",
  "license": "Derived Beerware License",
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/chrome": "^0.0.211",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "npm-build-zip": "^1.0.3",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "rollup": "^3.13.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-multi-input": "^1.3.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@ui5/webcomponents": "1.11.0-rc.0"
  }
}
